<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/define_dimen_10">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/define_dimen_80"
        android:layout_height="@dimen/define_dimen_50"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/define_dimen_6"
        android:layout_toStartOf="@id/img_update"
        android:layout_toEndOf="@id/img"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_update"
        android:layout_width="@dimen/define_dimen_30"
        android:layout_height="@dimen/define_dimen_30"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/img_delete"
        android:src="@drawable/ic_update"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/define_dimen_30"
        android:layout_height="@dimen/define_dimen_30"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/define_dimen_10"
        android:src="@drawable/ic_delete"
        tools:ignore="ContentDescription" />
</RelativeLayout>