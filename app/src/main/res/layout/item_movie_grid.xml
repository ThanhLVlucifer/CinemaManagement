<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/define_dimen_10"
    android:layout_marginEnd="@dimen/define_dimen_10"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/define_dimen_6">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/define_dimen_120">

            <ImageView
                android:id="@+id/img_moive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_cinema"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/tv_movie_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_white_shape_border_green"
                android:paddingStart="@dimen/define_dimen_3"
                android:paddingEnd="@dimen/define_dimen_3"
                android:text="@string/app_name"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_star"
                android:layout_width="@dimen/define_dimen_16"
                android:layout_height="@dimen/define_dimen_16"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/tv_movie_evaluate"
                android:src="@drawable/ic_movie_score" />

            <TextView
                android:id="@+id/tv_movie_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_movie_evaluate"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_white_shape_border_green"
                android:paddingStart="@dimen/define_dimen_3"
                android:paddingEnd="@dimen/define_dimen_3"
                android:text="@string/app_name"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

