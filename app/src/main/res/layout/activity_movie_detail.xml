<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".controller.moviedetail.MovieDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/define_dimen_150"
                android:layout_height="@dimen/define_dimen_300"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/splash_cinema" />

            <LinearLayout
                android:id="@+id/layout_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/define_dimen_10"
                android:layout_toEndOf="@id/img"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"
                        tools:ignore="PrivateResource" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_10">

                    <TextView
                        android:id="@+id/tv_movie_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/define_dimen_40"
                        android:background="@drawable/bg_white_shape_border_green"
                        android:gravity="center"
                        android:paddingStart="@dimen/define_dimen_3"
                        android:paddingEnd="@dimen/define_dimen_3"
                        android:text="@string/app_name"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_xnormal"
                        android:textStyle="bold"
                        tools:ignore="PrivateResource" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_10">

                    <ImageView
                        android:id="@+id/label_evaluate"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/define_dimen_5"
                        android:src="@drawable/ic_movie_score" />

                    <TextView
                        android:id="@+id/tv_movie_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/define_dimen_5"
                        android:layout_toEndOf="@+id/label_evaluate"
                        android:text="@string/app_name"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_xnormal"
                        tools:ignore="PrivateResource" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_10">

                    <ImageView
                        android:id="@+id/label_movie_duration"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/define_dimen_5"
                        android:src="@drawable/ic_movie_duration" />

                    <TextView
                        android:id="@+id/tv_movie_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/define_dimen_5"
                        android:layout_toEndOf="@+id/label_movie_duration"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_xnormal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_10">

                    <ImageView
                        android:id="@+id/label_movie_genre"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/define_dimen_5"
                        android:src="@drawable/ic_movie_genre" />

                    <TextView
                        android:id="@+id/tv_movie_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/define_dimen_5"
                        android:layout_toEndOf="@+id/label_movie_genre"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_xnormal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_10">

                    <ImageView
                        android:id="@+id/label_movie_release_date"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/define_dimen_5"
                        android:src="@drawable/ic_movie_release_date" />

                    <TextView
                        android:id="@+id/tv_movie_release_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/define_dimen_5"
                        android:layout_toEndOf="@+id/label_movie_release_date"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_xnormal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/define_dimen_10">

                    <ImageView
                        android:id="@+id/label_movie_ticket_price"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/define_dimen_5"
                        android:src="@drawable/ic_movie_ticket_price" />

                    <TextView
                        android:id="@+id/tv_movie_ticket_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/define_dimen_5"
                        android:layout_toEndOf="@+id/label_movie_ticket_price"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_xnormal" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/define_dimen_10"
            android:background="@color/green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_movie_trailer"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layout_trailer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/define_dimen_120"
            android:background="@color/black">

            <ImageView
                android:id="@+id/img_trailer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/splash_cinema" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play_circle" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_10"
            android:text="@string/label_movie_description"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_movie_desciption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_5"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="normal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_movie_actor"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_movie_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_5"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="normal" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_movie_director"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_movie_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_5"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_20"
            android:layout_marginBottom="@dimen/define_dimen_10"
            android:background="@drawable/bg_green_shape_corner_6"
            android:gravity="center"
            android:padding="@dimen/define_dimen_12"
            android:text="@string/button_booking"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>